<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>


	<style name="PreferencesTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowBackground">@drawable/wood_bg</item>
		<item name="colorPrimaryDark">@android:color/transparent</item>

		<item name="android:textColor">@android:color/white</item>
		<item name="android:textColorSecondary">@android:color/darker_gray</item>

		<!-- Active thumb color & Active track color(30% transparency) -->
		<item name="colorControlActivated">@color/greenYellow</item>
		<!-- Inactive thumb color -->
		<item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
		<!-- Inactive track color(30% transparency) -->
		<item name="android:colorForeground">@android:color/darker_gray</item>
	</style>

</resources>
