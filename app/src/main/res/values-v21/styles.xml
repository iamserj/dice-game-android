<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="PreferencesTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowBackground">@drawable/wood_bg</item>
		<item name="colorPrimaryDark">@android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>

		<item name="android:textColor">@android:color/white</item>
		<item name="android:textColorSecondary">@android:color/darker_gray</item>

		<!-- Active thumb color & Active track color(30% transparency) -->
		<item name="colorControlActivated">@color/greenYellow</item>
		<!-- Inactive thumb color -->
		<item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
		<!-- Inactive track color(30% transparency) -->
		<item name="android:colorForeground">@android:color/darker_gray</item>
	</style>
</resources>